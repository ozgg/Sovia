<% if posts[:next].is_a?(Post) || posts[:prev].is_a?(Post) %>
    <nav class="adjacent">
      <ul>
        <li><%= link_to posts[:prev].title_for_view, posts[:prev], rel: 'prev' unless posts[:prev].blank? %></li>
        <li><%= link_to posts[:next].title_for_view, posts[:next], rel: 'next' unless posts[:next].blank? %></li>
      </ul>
    </nav>
<% end %>
