<% content_for :meta_title, t('.title', page: current_page) %>
<% content_for :meta_description, t('.description', page: current_page) %>
<% content_for :sidebar do %>
    <%= render 'sidebar/statistics' %>
    <%= render 'sidebar/random_dream' %>
    <%= render 'sidebar/more_links' %>
<% end %>

<%= render 'shared/metrics' %>

<article>
  <header>
    <h1><%= t('.header') %></h1>

    <h2><%= render 'shared/page' %></h2>
    <%= render 'management_links' %>
  </header>

  <%= render partial: 'list', locals: { posts: @posts, paginate: true } %>
</article>
