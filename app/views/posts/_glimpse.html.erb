<div class="header">
  <div class="title"><%= link_to entity.title, entity %></div>
  <span class="author"><%= user_link entity.user %></span>
  <%= render partial: 'shared/publication_time', locals: { time: entity.created_at } %>
</div>
<div class="body">
  <% if entity.image.url %>
      <div class="image"><%= image_tag entity.image.url, alt: entity.title %></div>
  <% end %>
  <div class="text"><%= entity.lead %></div>
</div>
<div class="footer">
  <%= link_to t(:comment, count: entity.comments_count), entity %>
</div>
