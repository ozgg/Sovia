<% content_for :meta_title, t('.title') %>
<% content_for :sidebar do %>
    <div>
      <nav class="options">
        <ul>
          <li><%= link_to t(:list), posts_path %></li>
          <li><%= link_to t(:view), @entity %></li>
          <li><%= link_to_delete @entity %></li>
        </ul>
      </nav>
    </div>
<% end %>

<article class="edit-post">
  <h1><%= t('.title') %></h1>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
