<% content_for :meta_title, @post.title %>
<% content_for :meta_description, @post.preview %>
<% content_for :meta_type, 'article' %>
<% content_for :meta_type_extension do %>
    <meta property="og:article:published_time" content="<%= @post.created_at.iso_day %>" />
    <meta property="og:article:modified_time" content="<%= @post.updated_at.iso_day %>" />
    <meta property="og:article:author" content="<%= @post.user.login %>" />
<% end %>
<% content_for :meta_image, (request.protocol + request.host_with_port + @post.image.url) if @post.image.url %>
<% content_for :sidebar do %>
    <%= render 'sidebar/statistics' %>
    <%= render 'sidebar/more_links' %>
<% end %>

<%= render 'shared/metrics' %>

<%= render @post %>
