<% if current_user.is_a? User %>
    <div>
      <ul>
        <% if current_user.has_role? :administrator %>
            <li><%= link_to t('admin.index.title'), admin_path %></li>
        <% end %>
        <li><%= link_to t('my.index.index.title'), my_path %></li>
        <li><%= link_to t('deeds.index.title'), my_deeds_path %></li>
        <li><%= link_to t('my.goals.index.header'), my_goals_path %></li>
        <% if current_user.should_confirm_email? %>
            <li><%= link_to t('my.confirmations.show.title'), my_confirmation_path %></li>
        <% end %>
      </ul>
    </div>
<% else %>
    <div>
      <%= render 'authentications/form' %>
    </div>
<% end %>
