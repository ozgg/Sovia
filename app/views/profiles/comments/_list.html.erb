<% if collection.any? %>
    <ul class="list-of-entities">
      <% collection.each do |comment| %>
          <% if comment.deleted? %>
              <li class="deleted"><%= t(:deleted_entity) %></li>
          <% else %>
              <li>
                <div class="data">
                  <% if comment.visible_to?(current_user) %>
                      <div>
                        <%= comment.commentable.model_name.human %>
                        <cite><%= link_to comment.commentable.title, comment.commentable %></cite>
                      </div>
                      <div class="info">
                        <%= prepare_comment_text(comment, current_user) %>
                      </div>
                  <% else %>
                      <%= t('comments.comment.unavailable_to_you') %>
                  <% end %>
                </div>
              </li>
          <% end %>
      <% end %>
    </ul>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>
