<% content_for :title, t('.title') %>

<h1><%= t('.register') %></h1>
<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div class="errors">
          <h2><%= pluralize(@user.errors.count, 'error') %>:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label :login %><br />
      <%= f.text_field :login, required: true, size: 30, maxlength: 30 %>
      <div class="notice"><%= t('.login_notice') %></div>
    </div>
    <div>
      <%= f.label :email %><br />
      <%= f.text_field :email, size: 30 %>
      <div class="notice"><%= t('.email_notice') %></div>
    </div>
    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, required: true, size: 30 %>
      <div class="notice"><%= t('.password_notice') %></div>
    </div>
    <div>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, required: true, size: 30 %>
      <div class="notice"><%= t('.password_confirmation_notice') %></div>
    </div>
    <div>
      <%= f.check_box :allow_mail %>
      <%= f.label :allow_mail %>
    </div>
    <div>
      <%= check_box_tag :agree %>
      <%= label_tag :agree, t('.i_am_bot') %>
    </div>
    <div>
      <%= t('.agreement') %>.
    </div>
    <div>
      <%= f.button t('.register'), type: 'submit' %>
    </div>
<% end %>
