<% content_for :meta_title, t('.title') %>
<% content_for :meta_description, t('.description') %>
<%= render 'shared/metrics' %>

<section>
  <h1><%= t('.register') %></h1>
  <%= form_for(@user) do |f| %>
      <%= render partial: 'shared/errors_list', locals: { entity: @user } %>

      <div>
        <div><%= f.label :login %></div>
        <%= f.text_field :login, required: true, size: 30, maxlength: 30 %>
        <p class="notice"><%= t('.login_notice') %></p>
      </div>
      <div>
        <div><%= f.label :email %></div>
        <%= f.text_field :email, size: 30 %>
        <p class="notice"><%= t('.email_notice') %></p>
      </div>
      <div>
        <div><%= f.label :password %></div>
        <%= f.password_field :password, required: true, size: 30 %>
        <p class="notice"><%= t('.password_notice') %></p>
      </div>
      <div>
        <div><%= f.label :password_confirmation %></div>
        <%= f.password_field :password_confirmation, required: true, size: 30 %>
        <p class="notice"><%= t('.password_confirmation_notice') %></p>
      </div>
      <div>
        <%= f.check_box :allow_mail %>
        <%= f.label :allow_mail %>
      </div>
      <div>
        <%= check_box_tag :agree %>
        <%= label_tag :agree, t('.i_am_bot') %>
      </div>
      <div>
        <%= t('.agreement') %>.
      </div>
      <div>
        <%= f.button t('.register'), type: 'submit' %>
      </div>
  <% end %>
</section>
