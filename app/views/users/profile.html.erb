<% content_for :meta_title, @user.login %>
<% content_for :meta_description, t('.description', user: @user.login) %>
<% content_for :meta_image, (request.protocol + request.host_with_port + @user.avatar.url) if @user.avatar.url %>
<%= render 'shared/metrics' %>

<article class="user-profile">
  <header>
    <h1><%= @user.login %></h1>
  </header>
  <figure>
    <%= raw profile_avatar(@user) %>
    <figcaption><%= @user.login %></figcaption>
  </figure>

  <table>
    <caption><%= t('.user_info') %></caption>
    <tbody>
    <tr>
      <th><%= t('.registration_date') %></th>
      <td><time datetime="<%= @user.created_at.w3c %>"><%= @user.created_at.strftime('%d.%m.%Y') %></time></td>
    </tr>
    <tr>
      <th><%= t('.entries_count') %></th>
      <td><%= @user.entries_count %></td>
    </tr>
    <tr>
      <th><%= t('.comments_count') %></th>
      <td><%= @user.comments_count %></td>
    </tr>
    </tbody>
  </table>

  <p><%= link_to t('.read_dreams'), user_dreams_path(login: @user.login) %></p>
  <p><%= link_to t('.read_posts'), user_posts_path(login: @user.login) %></p>
  <p><%= link_to t('.read_comments'), user_comments_path(login: @user.login) %></p>
</article>
