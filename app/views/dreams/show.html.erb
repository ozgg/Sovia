<% content_for :meta_title, t('.title', title: @entity.title_for_view) %>
<% content_for :meta_description, glimpse(prepare_dream_text(@entity, nil)) %>
<% content_for :meta_type, 'article' %>
<% content_for :meta_type_extension do %>
    <meta property="og:article:published_time" content="<%= @entity.pubdate_iso %>" />
    <meta property="og:article:modified_time" content="<%= @entity.updated_at.strftime('%Y-%m-%d') %>" />
    <meta property="og:article:author" content="<%= @entity.owner_name %>" />
<% end %>

<% content_for :sidebar do %>
    <% if @entity.editable_by? current_user %>
        <div class="options">
          <ul>
            <li><%= link_to t(:edit), edit_dream_path(@entity) %></li>
            <li><%= link_to_delete @entity %></li>
          </ul>
        </div>
    <% end %>
<% end %>

<%= render partial: 'adjacent', locals: { dreams: @adjacent } %>
<%= render @entity %>
