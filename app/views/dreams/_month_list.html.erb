<% unless params[:year].nil? %>
    <h2><%= t('dreams.archive.year', year: params[:year]) %></h2>
    <% if params[:month].nil? %>
        <% if @dates[params[:year].to_i] %>
            <ul>
              <% @dates[params[:year].to_i].each do |month| %>
                  <li><%= link_to t('date.nominative_months')[month], archive_entry_dreams_path(year: params[:year], month: month) %></li>
              <% end %>
            </ul>
        <% else %>
            <%= render 'shared/nothing_found' %>
        <% end %>
    <% else %>
        <h3><%= t('date.nominative_months')[params[:month].to_i] %> (<%= render 'shared/page' %>)</h3>
        <% if @dreams.any? %>
            <ul>
              <% @dreams.each do |dream| %>
              <li>
                <%= link_to dream.parsed_title, verbose_entry_path(dream) %>
                (<time datetime="<%= dream.created_at.w3c %>"><%= dream.created_at.utc.strftime('%d.%m.%Y') %></time>)
              </li>
              <% end %>
            </ul>
            <%= paginate @dreams %>
        <% else %>
            <%= render 'shared/nothing_found' %>
        <% end %>
    <% end %>
<% end %>