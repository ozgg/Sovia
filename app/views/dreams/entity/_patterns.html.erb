<section class="interpretation">
  <h2><%= t('.automatic_interpretation') %></h2>

  <dl>
    <% dream.interpretation.each do |pattern| %>
        <dt><%= pattern_in_dreambook pattern %></dt>
        <dd>
          <% if pattern.essence.blank? %>
              <%= t('.see_dreambook') %>
          <% else %>
              <%= pattern.essence %>
          <% end %>
        </dd>
    <% end %>
  </dl>
</section>
