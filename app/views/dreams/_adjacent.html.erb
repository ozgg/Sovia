<% if dreams[:next].is_a?(Dream) || dreams[:prev].is_a?(Dream) %>
    <nav class="adjacent">
      <ul>
        <% unless dreams[:prev].blank? %>
            <li><%= dream_link dreams[:prev], current_user %></li>
        <% end %>
        <% unless dreams[:next].blank? %>
            <li><%= dream_link dreams[:next], current_user %></li>
        <% end %>
      </ul>
    </nav>
<% end %>
