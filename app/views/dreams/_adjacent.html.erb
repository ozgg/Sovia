<% if dreams[:next].is_a?(Dream) || dreams[:prev].is_a?(Dream) %>
    <nav class="adjacent">
      <ul>
        <li>
          <% unless dreams[:prev].blank? %>
              <span><%= dream_link dreams[:prev], current_user %></span>
          <% end %>
        </li>
        <li>
          <% unless dreams[:next].blank? %>
              <span><%= dream_link dreams[:next], current_user %></span>
          <% end %>
        </li>
      </ul>
    </nav>
<% end %>
