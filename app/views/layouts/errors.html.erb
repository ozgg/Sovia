<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <meta charset="utf-8" />
  <title><%= yield :meta_title %> :: <%= t('layouts.application.title') %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="description" content="<%= yield :description %>" />
</head>
<body>
<%= render 'layouts/header' %>

<div id="content">
  <div id="main" role="main">
    <% if flash[:notice] %>
        <div class="notice" aria-label="<%= t('layouts.application.notice') %>"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>
  </div>

  <div id="sidebar" role="complementary">
    <%= yield :sidebar %>
  </div>
</div>

<%= render 'layouts/footer' %>
</body>
</html>
