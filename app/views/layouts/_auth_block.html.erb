<div>
  <% if current_user.nil? %>
      <%= form_tag login_path do %>
          <fieldset>
            <legend><%= t('.authorize') %></legend>
            <%= label_tag :login, t('activerecord.attributes.user.login') %>
            <%= text_field_tag :login %>
            <br/>
            <%= label_tag :password, t('activerecord.attributes.user.password') %>
            <%= password_field_tag :password %>
            <br/>
            <%= button_tag t('sessions.new.enter'), type: 'submit' %>
            <%= link_to t('users.new.register'), new_user_path %>
          </fieldset>
      <% end %>
  <% else %>
      <%= current_user.login %>
      <nav>
        <ul>
          <li><%= link_to t('.private'), my_path %></li>
          <li><%= link_to t('.logout'), logout_path, method: :delete %></li>
        </ul>
      </nav>
  <% end %>
</div>
