<% tags = Tag::Dream.order('entries_count desc').first(10) %>
<div>
  <h2><%= t('.statistics') %></h2>
  <% if tags.any? %>
      <nav>
        <ol>
          <% tags.each do |tag| %>
              <li><%= tagged_entries_path(tag) %> (<%= tag.entries_count %>)</li>
          <% end %>
        </ol>
      </nav>
  <% else %>
      <div><%= t('nothing_found') %></div>
  <% end %>
</div>
