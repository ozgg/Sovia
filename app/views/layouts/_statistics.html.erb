<% tags = Tag::Dream.order('entries_count desc').first(10) %>
<aside>
  <header><h2><%= t('.statistics') %></h2></header>
  <% if tags.any? %>
  <nav>
    <ol>
      <% tags.each do |tag| %>
      <li><%= link_to tag.name, tagged_entry_dreams_path(tag: tag.name), rel: 'tag' %> (<%= tag.entries_count %>)</li>
      <% end %>
    </ol>
  </nav>
  <% else %>
  <p><%= t('nothing_found') %></p>
  <% end %>
</aside>
