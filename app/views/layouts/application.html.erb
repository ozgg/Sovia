<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <title><%= yield :title %> :: <%= t('.title') %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8" />
  <meta name="description" content="<%= yield :description %>" />
</head>
<body>
<header>
  <figure role="banner"><%= link_to(image_tag('owl.png', alt: 'Sovia'), root_path) %></figure>
  <%= render 'layouts/main_navigation' %>
  <%= render 'layouts/auth_block' %>
</header>

<section role="main">
  <% if flash[:notice] %>
      <div id="notice" aria-label="<%= t('.notice') %>"><%= flash[:notice] %></div>
  <% end %>
  <%= yield %>
</section>

<footer>
  <div role="contentinfo">&copy; 2006&ndash;2014 sovia.ru</div>
  <div role="contentinfo"><%= link_to t('.terms_of_service'), tos_path %></div>
  <%= render 'index/metrics' if Rails.env.production? %>
</footer>
</body>
</html>
