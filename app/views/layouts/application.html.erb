<!DOCTYPE html>
<html lang="<%= locale %>" prefix="og: http://ogp.me/ns#">
<head>
  <meta charset="utf-8" />
  <title><%= yield :meta_title %> :: <%= t('.title') %></title>
  <%= render 'layouts/meta_texts' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/favicons' %>
  <%= render 'layouts/head_links' %>
</head>
<body>

<%= render 'layouts/header' %>

<div id="content">
  <div id="main" role="main">
    <% if flash[:notice] %>
        <div class="notice" aria-label="<%= t('.notice') %>"><%= flash[:notice] %></div>
    <% end %>

    <%= yield %>
  </div>

  <div id="sidebar" role="complementary">
    <%= yield :sidebar %>
  </div>
</div>

<%= render 'layouts/footer' %>

</body>
</html>
