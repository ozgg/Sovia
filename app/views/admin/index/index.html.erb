<% content_for :meta_title, t('.title') %>

<article class="admin-index">
  <h1><%= t('.title') %></h1>

  <ul>
    <% if current_user_has_role? :administrator %>
        <li><%= link_to t('admin.users.index.heading'), admin_users_path %></li>
        <li><%= link_to t('admin.tokens.index.heading'), admin_tokens_path %></li>
        <li><%= link_to t('admin.codes.index.heading'), admin_codes_path %></li>
        <li><%= link_to t('admin.browsers.index.heading'), admin_browsers_path %></li>
        <li><%= link_to t('admin.agents.index.heading'), admin_agents_path %></li>
        <li><%= link_to t('admin.comments.index.heading'), admin_comments_path %></li>
    <% end %>
    <% if current_user_has_role? :editor, :chief_editor %>
        <li><%= link_to t('admin.tags.index.heading'), admin_tags_path %></li>
        <li><%= link_to t('admin.posts.index.heading'), admin_posts_path %></li>
    <% end %>
    <% if current_user_has_role? :interpreter, :chief_interpreter %>
        <li><%= link_to t('admin.patterns.index.heading'), admin_patterns_path %></li>
    <% end %>
  </ul>
</article>
