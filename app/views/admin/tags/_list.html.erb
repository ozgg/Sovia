<% if collection.any? %>
    <ul class="list-of-tags">
      <% collection.each do |tag| %>
          <% if tag.deleted? %>
              <li class="deleted"><%= t('activerecord.attributes.tag.deleted') %>, id: <%= tag.id %></li>
          <% else %>
              <li>
                <%= link_to tag.name, tag %> (<%= t(:post, count: tag.posts_count) %>)
              </li>
          <% end %>
      <% end %>
    </ul>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>