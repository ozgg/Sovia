<div class="toggleable" data-url="<%= toggle_api_pattern_path(pattern) %>">
  <% Pattern.toggleable_attributes.each do |flag| %>
  <span class="<%= pattern.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.pattern.#{flag}") %>
  </span>
  <% end %>
</div>
