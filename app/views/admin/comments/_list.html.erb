<% if collection.any? %>
    <ul class="list-of-entities">
      <% collection.each do |comment| %>
          <% if comment.deleted? %>
              <li class="deleted"><%= t(:deleted_entity) %> id: <%= comment.id %></li>
          <% else %>
              <li><%= render partial: 'admin/comments/entity/in_list', locals: { comment: comment } %></li>
          <% end %>
      <% end %>
    </ul>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>
