<% content_for :meta_title, t('.title', id: @entity.id) %>

<article class="entity-page">
  <h1><%= t('.title', id: @entity.id) %></h1>

  <ul class="actions">
    <li><%= list_icon admin_comments_path %></li>
    <% unless @entity.locked? %>
        <li><%= edit_icon edit_comment_path(@entity) %></li>
        <li class="danger"><%= destroy_icon @entity %></li>
    <% end %>
  </ul>

  <table>
    <tbody>
    <tr>
      <th><%= t('activerecord.attributes.comment.commentable') %></th>
      <td>
        <%= @entity.commentable.model_name.human %>
        <cite><%= link_to @entity.commentable.title, @entity.commentable %></cite>
      </td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.comment.user_id') %></th>
      <td><%= admin_user_link @entity.user %></td>
    </tr>
    <tr>
      <th><%= t(:created_at) %></th>
      <td><%= time_tag @entity.created_at %></td>
    </tr>
    <tr>
      <th><%= t(:updated_at) %></th>
      <td><%= time_tag @entity.updated_at %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.comment.body') %></th>
      <td><%= prepare_comment_text(@entity) %></td>
    </tr>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="2">
        <%= render partial: 'admin/comments/toggleable', locals: { comment: @entity } %>
      </td>
    </tr>
    </tfoot>
  </table>
</article>
