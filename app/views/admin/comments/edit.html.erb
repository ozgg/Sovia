<% content_for :meta_title, t('.title', id: @comment.id) %>

<article>
  <header>
    <h1><%= t('.title', id: @comment.id) %></h1>
    <nav class="options">
      <ul>
        <li><%= link_to t(:list), admin_comments_path %></li>
        <li><%= link_to t(:view), admin_comment_path(@comment) %></li>
        <li><%= link_to t(:delete), admin_comment_path(@comment), method: :delete, data: { confirm: t(:are_you_sure) } %></li>
      </ul>
    </nav>
  </header>

  <%= form_tag admin_comment_path(@comment), method: :patch do %>
      <div>
        <%= label_tag :comment_body, t('activerecord.attributes.comment.body') %><br />
        <%= text_area_tag 'comment[body]', @comment.body, required: true, cols: 80, rows: 20 %>
      </div>
      <div>
        <%= button_tag t(:submit), type: :submit %>
      </div>
  <% end %>
</article>
