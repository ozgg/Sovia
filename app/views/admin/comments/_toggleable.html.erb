<div class="toggleable" data-url="<%= toggle_api_comment_path(comment) %>">
  <% Comment.toggleable_attributes.each do |flag| %>
  <span class="<%= comment.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.comment.#{flag}") %>
  </span>
  <% end %>
</div>
