<% content_for :meta_title, t('.title', page: current_page) %>

<article>
  <header>
    <h1><%= t('.header') %></h1>
    <h2><%= render 'shared/page' %></h2>
    <nav class="options">
      <ul>
        <li><%= link_to t(:create), new_admin_dream_tag_path %></li>
        <li><%= link_to t('admin.queues.tags.header'), admin_queues_tags_path %></li>
      </ul>
    </nav>
  </header>

  <%= form_tag admin_dream_tags_path, method: :get do %>
      <div>
        <%= label_tag :letter, t('dreambook.letters.select_letter') %>
        <%= text_field_tag :letter, params[:letter].to_s, size: 1, maxlength: 1 %><br />
        <%= label_tag :word, t('.select_word') %>
        <%= search_field_tag :word %>
        <%= button_tag t(:submit), type: :submit %>
        <%= link_to t(:reset), admin_dream_tags_path %>
      </div>
  <% end %>

  <% if @tags.any? %>
      <ul>
        <% @tags.each do |tag| %>
            <li><%= link_to tag.name, admin_dream_tag_path(tag) %> (<%= tag.entries_count %>)</li>
        <% end %>
      </ul>

      <%= paginate @tags %>
  <% else %>
      <%= render 'shared/nothing_found' %>
  <% end %>
</article>
