<% content_for :meta_title, t('.title', name: @tag.name) %>

<article>
  <header>
    <h1><%= t('.title', name: @tag.name) %></h1>
    <nav class="options">
      <ul>
        <li><%= link_to t('.in_dreambook'), dreambook_word_path(letter: @tag.letter, word: @tag.uri_name) %></li>
        <li><%= link_to t(:list), admin_dream_tags_path %></li>
        <li><%= link_to t('admin.queues.tags.header'), admin_queues_tags_path %></li>
        <li><%= link_to t(:edit), edit_admin_dream_tag_path(@tag) %></li>
        <li><%= link_to t(:delete), admin_dream_tag_path(@tag), method: :delete, data: { confirm: t(:are_you_sure) } %></li>
      </ul>
    </nav>
  </header>

  <section class="entry-tag">
    <header>
      <h1><%= @tag.name %></h1>
    </header>
    <div>
      <%= raw parse_body(@tag.description.to_s, true, true) %>
    </div>
  </section>
</article>
