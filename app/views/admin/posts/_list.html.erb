<% if collection.any? %>
    <ul class="list-of-posts">
      <% collection.each do |post| %>
          <% if post.deleted? %>
              <li class="deleted"><%= t('activerecord.attributes.post.deleted') %>, id: <%= post.id %></li>
          <% else %>
              <li>
                <%= render partial: 'admin/posts/post/preview', locals: { post: post } %>
              </li>
          <% end %>
      <% end %>
    </ul>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>