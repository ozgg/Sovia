<% content_for :meta_title, t('.title', page: current_page) %>

<article>
  <header>
    <h1><%= t('.header') %></h1>
    <h2><%= render 'shared/page' %></h2>
    <nav class="options">
      <ul>
        <li><%= link_to t(:list), admin_dream_tags_path %></li>
      </ul>
    </nav>
  </header>

  <p><progress value="<%= @progress[0] %>" max="<%= @progress[1] %>" title="<%= "#{@progress[0]}/#{@progress[1]}" %>"></progress>
    <%= (Time.now + @tags.total_pages.days).strftime('%d.%m.%Y') %></p>

  <% if @tags.any? %>
      <ol start="<%= ((params[:page] || 1).to_i - 1) * 25 + 1 %>">
        <% @tags.each do |tag| %>
            <li>
              <%= link_to tag.name, edit_admin_dream_tag_path(tag) %> (<%= tag.entries_count %>)
        <% end %>
      </ol>

      <%= paginate @tags %>
  <% else %>
      <%= render 'shared/nothing_found' %>
  <% end %>
</article>
