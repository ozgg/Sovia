<% content_for :meta_title, t('.title', name: @entity.name) %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>
  <ul class="actions">
    <li><%= create_icon new_grain_category_path %></li>
    <li><%= list_icon admin_grain_categories_path %></li>
    <% unless @entity.locked? %>
        <li><%= edit_icon edit_grain_category_path(@entity) %></li>
        <li class="danger"><%= destroy_icon @entity %></li>
    <% end %>
  </ul>

  <div><%= t(:grain, count: @entity.grains_count) %></div>
</article>
