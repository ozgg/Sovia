<%= render partial: 'shared/errors_list', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <% unless entity.image.blank? %>
        <figure>
          <%= link_to image_tag(entity.image.medium.url), entity.image.url %>
          <figcaption><%= t('activerecord.attributes.post.image') %></figcaption>
        </figure>
    <% end %>
    <div>
      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/jpeg, image/png' %>
    </div>
    <div>
      <%= f.label :category %>
      <%= f.select :category, grain_categories_for_select %>
    </div>
    <div>
      <%= f.label :latitude %>
      <%= f.number_field :latitude, min: -90, max: 90, step: 0.000001 %>
    </div>
    <div>
      <%= f.label :longitude %>
      <%= f.number_field :longitude, min: -180, max: 180, step: 0.000001 %>
    </div>
    <div>
      <div><%= f.label :name %></div>
      <%= f.text_field :name, required: true, size: 50 %>
    </div>
    <div>
      <%= label_tag :grain_pattern_name, t('activerecord.attributes.grain.pattern_id') %>
      <%= text_field_tag 'grain[pattern_name]', entity.pattern_name %>
    </div>
    <div>
      <div><%= f.label :description %></div>
      <%= f.text_area :description, cols: 80, rows: 20 %>
    </div>

    <div>
      <%= f.button t(:submit), type: :submit %>
    </div>
<% end %>
