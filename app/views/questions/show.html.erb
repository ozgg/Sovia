<% content_for :meta_title, t('.title', id: @entity.id) %>
<% content_for :meta_description, t('.description', owner: @entity.user.screen_name) %>
<% content_for :sidebar do %>
    <div class="options">
      <ul>
        <li><%= link_to t('questions.new.title'), new_question_path %></li>
        <li><%= link_to t(:list), questions_path %></li>
        <% if current_user_has_role? :administrator %>
            <li><%= link_to t(:edit), edit_question_path(@entity) %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= render @entity %>
