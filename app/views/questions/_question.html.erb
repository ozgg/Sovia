<div class="question" itemscope itemtype="http://schema.org/Question">
  <div class="header">
    <span class="user" itemprop="author" itemscope itemtype="http://schema.org/Person">
      <%= comment_avatar(question.owner) %>
      <span itemprop="name"><%= user_link(question.owner) %></span>
    </span>
    <time itemprop="dateCreated" content="<%= question.created_at.microformat_minutes %>" datetime="<%= question.created_at.w3c %>"><%= question.created_at.strftime('%d.%m.%Y, %H:%M') %></time>
  </div>
  <div class="body" itemprop="text">
    <%= raw parse_body(question.body, false, true) %>
  </div>
</div>