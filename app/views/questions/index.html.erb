<% content_for :meta_title, t('.title', page: current_page) %>
<% content_for :meta_description, t('.description', page: current_page) %>

<%= render 'shared/metrics' %>

<nav class="options">
  <ul>
    <li><%= link_to t(:create), new_question_path %></li>
  </ul>
</nav>

<div>
  <%= t('.header') %>

  <%= paginate @collection %>
  <% if @collection.any? %>
      <%= render @collection, locals: { show_links: true } %>
  <% else %>
      <%= render 'shared/nothing_found' %>
  <% end %>
  <%= paginate @collection %>
</div>
