<h1><%= t('.main') %></h1>
<h1><%= t('.recent_articles') %></h1>
<% if @articles.any? %>
    <% @articles.each do |article| %>
        <%= render partial: 'posts/post', object: article, locals: { preview: true } %>
    <% end %>
<% else %>
    <div class="message"><%= t('.no_articles') %></div>
<% end %>