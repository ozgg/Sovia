<% content_for :meta_title, t('.title') %>
<% content_for :meta_description, t('.description') %>
<%= render 'shared/metrics' %>

<article class="confirmation">
  <header>
    <h1><%= t('.title') %></h1>
  </header>

  <% if current_user && current_user.mail_confirmed? %>
      <div class="information"><%= t('user.email_confirmed') %></div>
  <% else %>
      <section>
        <h1><%= t('.got_code') %></h1>
        <%= form_tag my_confirmation_path, method: :patch do %>
            <div>
              <%= label_tag :code, t('.code') %>
              <%= text_field_tag :code, param_from_request(:code), required: true %>
            </div>
            <div>
              <%= button_tag t('.confirm'), type: :submit %>
            </div>
        <% end %>

      </section>

      <section>
        <h1><%= t('.no_code') %></h1>
        <%= form_tag my_confirmation_path, method: :post do %>
            <div>
              <%= button_tag t('confirmation.send_code'), type: :submit %>
            </div>
        <% end %>
      </section>
  <% end %>
</article>

