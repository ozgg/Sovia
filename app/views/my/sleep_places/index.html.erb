<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('my.index.index.nav_text'), my_path) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <div class="content-wrapper">
    <h1><%= t('.heading') %></h1>

    <p class="lead">
      Вы можете добавить места, где спите, и указывать их при описании своих снов.
    </p>

    <%= render partial: 'list', locals: { collection: @collection } %>

    <% if component_handler.can_add_sleep_place? %>
      <section>
        <h2><%= t('sleep_places.new.nav_text') %></h2>

        <%=
          render(
              partial: 'sleep_places/form',
              locals:  {
                  entity: SleepPlace.new
              }
          )
        %>
      </section>
    <% end %>
  </div>
</article>
