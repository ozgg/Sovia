<% content_for :meta_title, t('.title', page: current_page) %>
<%= render 'shared/metrics' %>

<article>
  <header>
    <h1><%= t('.header') %></h1>
    <h2><%= render 'shared/page' %></h2>
    <nav class="options">
      <ul>
        <li><%= link_to t('.about'), goals_path %></li>
        <li><%= link_to t(:create), new_goal_path %></li>
      </ul>
    </nav>
  </header>

  <% if @goals.any? %>
      <ul class="goals">
        <% @goals.each do |goal| %>
            <li><%= link_to goal.name, goal %> (<%= t("activerecord.attributes.goal.statuses.#{goal.status}") %> <%= goal.updated_at.strftime('%d.%m.%Y') %>)</li>
        <% end %>
      </ul>

      <%= paginate @goals %>
  <% else %>
      <div class="message"><%= t('nothing_found') %></div>
  <% end %>

</article>

