<% content_for :meta_title, t('.title', tag: @user_tag.tag.name) %>
<%= render 'shared/metrics' %>

<article class="dreambook-word">
  <header>
    <h1><%= t('.title', tag: @user_tag.tag.name) %></h1>
    <nav class="options">
      <ul>
        <li><%= link_to t('.all_symbols'), my_symbols_path %></li>
        <li><%= link_to t(:edit), edit_my_tag_path(@user_tag) %></li>
        <% unless @user_tag.tag.description.blank? %>
            <li><%= link_to t('.view_in_dreambook'), dreambook_word_path(letter: @user_tag.tag.letter, word: @user_tag.tag.name) %></li>
        <% end %>
      </ul>
    </nav>
  </header>

  <section>
    <header>
      <h2><%= @user_tag.tag.name %></h2>
    </header>
    <div>
      <% if @user_tag.description.blank? %>
          <%= t('.no_description') %>
      <% else %>
          <%= raw parse_body(@user_tag.description.to_s, true, true) %>
      <% end %>
    </div>
  </section>
</article>

