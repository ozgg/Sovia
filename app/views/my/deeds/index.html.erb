<% content_for :meta_title, t('.title', page: current_page) %>
<%= render 'shared/metrics' %>

<article>
  <header>
    <h1><%= t('.header') %></h1>
    <h2><%= render 'shared/page' %></h2>
    <nav class="options">
      <ul>
        <li><%= link_to t('.about'), deeds_path %></li>
      </ul>
    </nav>
  </header>

  <div>
    <h2><%= t('.create') %></h2>
    <%= render 'deeds/form' %>
  </div>

  <% if @deeds.any? %>
      <ul class="deeds">
        <% @deeds.each do |deed| %>
            <li>
              <time datetime="<%= deed.created_at.w3c %>"><%= deed.created_at.strftime('%d.%m.%Y') %></time>
              <%= deed.name %><%= deed.goal_postfix %>
              <%= link_to '*', deed %>
            </li>
        <% end %>
      </ul>

      <%= paginate @deeds %>
  <% else %>
      <div class="message"><%= t('.empty') %></div>
  <% end %>
</article>
