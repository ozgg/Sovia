<% content_for :meta_title, t('.title', page: current_page) %>
<% content_for :sidebar do %>
    <div>
      <nav class="options">
        <ul>
          <li><%= link_to t(:create), new_tag_path %></li>
        </ul>
      </nav>
    </div>
<% end %>

<article class="tags">
  <h1><%= t('.header') %></h1>

  <% paginate @collection %>
  <% if @collection.any? %>
      <ul>
        <% @collection.each do |tag| %>
            <li>
              <%= link_to tag.name, tag %> (<%= tag.post_count %>)
              [<%= link_to t(:edit), edit_tag_path(tag) %>]
            </li>
        <% end %>
      </ul>
  <% else %>
      <%= render 'shared/nothing_found' %>
  <% end %>
  <% paginate @collection %>
</article>