<header>
  <h1><%= t('.tag') %></h1>
  <nav>
    <ul>
      <li><%= link_to t('.list'), entry_tags_path %></li>
      <li><%= link_to t('.edit'), edit_entry_tag_path(@tag) %></li>
      <li><%= link_to t('.delete'), entry_tag_path(@tag), method: :delete, confirm: t('are_you_sure') %></li>
    </ul>
  </nav>
</header>
<article class="entry-tag">
  <header>
    <h2><%= @tag.name %></h2>
  </header>
  <div>
    <%= raw @tag.parsed_description %>
  </div>
</article>