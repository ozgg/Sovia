<header>
  <h1><%= t('.article') %></h1>
</header>
<article class="post article">
  <header>
    <div></div>
    <h2><%= @article.parsed_title %></h2>
    <div class="author">
      <%= user_link @article.user %>
      (<time datetime="<%= @article.created_at %>"><%= @article.created_at.strftime('%d.%m.%Y, %H:%M') %></time>)
    </div>
  </header>
  <div>
    <%= raw @article.parsed_body %>
  </div>
  <footer>
    <%= @article.comments_count %>
  </footer>
</article>
