<% content_for :title, t('.title', page: params[:page] || 1) %>
<% content_for :description, t('.description', page: params[:page] || 1) %>

<header>
  <h1><%= t('.header') %></h1>
  <h2><%= t('page', page: params[:page] || 1) %></h2>
  <% if current_user && current_user.editor? %>
      <nav>
        <ul>
          <li><%= link_to t('.new_article'), new_entry_article_path %></li>
        </ul>
      </nav>
  <% end %>
</header>

<%= render 'entries/list' %>

<section>
  <%= render 'layouts/statistics' %>
  <%= render 'layouts/random_dream' %>
  <%= render 'layouts/more' %>
</section>
