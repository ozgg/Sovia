<div id="comment-<%= comment.id %>" itemscope itemtype="http://schema.org/Comment" class="comment <%= comment.best? ? 'best' : '' %>">
  <meta itemprop="url" content="<%= comment_url comment %>"/>
  <div class="header">
    <div class="avatar"><%= comment_avatar comment.user %></div>
    <div class="user" itemprop="author" itemscope itemtype="http://schema.org/Person">
      <span itemprop="name"><%= user_link comment.user %></span>
    </div>
    <%= render partial: 'shared/publication_time', locals: { time: comment.created_at } %>
  </div>

  <div class="body" itemprop="about">
    <%= raw prepare_comment_text(comment, current_user) %>
  </div>

  <div class="actions">
    <% if current_user_has_role? :administrator %>
        <%= render partial: 'admin/flags', locals: { flags: comment.flags } %>
        <div class="edit"><%= link_to t(:edit), edit_comment_path(comment) %></div>
    <% end %>
    <% unless comment.commentable.is_a? Question %>
        <div class="reply"><%= t(:reply) %></div>
        <div class="container"></div>
    <% end %>
  </div>

  <%= render partial: 'shared/track_data', locals: { item: comment } %>
</div>
