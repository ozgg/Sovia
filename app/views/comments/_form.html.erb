<%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
        <div class="errors">
          <h2><%= t('error', count: @comment.errors.count) %>:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.hidden_field :entry_id %>
      <%= f.label :body %><br />
      <%= f.text_area :body, required: true, cols: 80, rows: 7 %>
    </div>
    <div>
      <%= f.button t('submit'), type: 'submit' %>
    </div>
<% end %>
