<% content_for :title, t('.title', thought: @entry.parsed_title) %>
<% content_for :description, t('.description', thought: @entry.parsed_title, user: @entry.author_name, date: @entry.publication_date) %>

<header>
  <h1><%= t('.thought') %></h1>
  <% if @entry.editable_by? current_user %>
  <nav>
    <ul>
      <li><%= link_to t('.edit'), edit_entry_thought_path(@entry) %></li>
      <li><%= link_to t('.delete'), @entry, method: :delete, data: { confirm: t('are_you_sure') } %></li>
    </ul>
  </nav>
  <% end %>
</header>

<%= render partial: 'entries/entry', object: @entry %>

<section>
  <%= render 'layouts/statistics' %>
  <%= render 'layouts/more' %>
</section>

<%= render 'common/metrics' %>
